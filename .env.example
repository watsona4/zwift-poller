# Zwift Credentials (required)
ZWIFT_USERNAME=your_zwift_email@example.com
ZWIFT_PASSWORD=your_zwift_password
ZWIFT_PLAYER_ID=1234567

# Home Assistant (required)
ZWIFT_HA_WEBHOOK_ID=your_webhook_id_here

# Home Assistant (optional)
ZWIFT_HA_URL=http://homeassistant:8123
ZWIFT_HA_TOKEN=

# Polling intervals in seconds (optional)
ZWIFT_PROFILE_INTERVAL=300
ZWIFT_ACTIVITIES_INTERVAL=300
ZWIFT_WORLD_INTERVAL=30

# Logging (optional)
ZWIFT_LOG_LEVEL=INFO
